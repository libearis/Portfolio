@model Product.ProductUpdateVM
<header>
    <div class="bread-crumbs">
        <a class="toggle-menu" href="javascript:;"><i class="fas fa-bars"></i></a>
        <span>PRODUCT INDEX / UPDATE PRODUCT</span>
    </div>
    <div class="user-wrapper">
        <div class="user">
            <a href="../account/change-password-form.html" class="full-name">anonymous</a>
            <span class="role">guest</span>
        </div>
        <div class="sign-out">
            <form action="" method="POST">
                <input type="hidden" />
                <button type="submit"><i class="fas fa-sign-out-alt"></i></button>
            </form>
        </div>
    </div>
</header>
<main>
    <form method="post" class="upsert-form" asp-action="Update">
        <input type="hidden" />
        <input type="hidden" />
        <input type="hidden" />
        <table>
            <tbody>
                <tr>
                    <td><label asp-for="@Model.ProductName">Product Name*</label></td>
                    <td>
                        <input type="text" id="name" asp-for="@Model.ProductName">
                        <div class="field-validation-error"></div>
                    </td>
                </tr>
                <tr>
                    <td><label>Category*</label></td>
                    <td>
                        <select name="CategoryId" asp-for="@Model.CategoryId">
                            <option th:value="null">No Specific Category</option>
                            @foreach(var category in Model.Categories)
                            {
                                <option value="@category.Id">@category.CategoryName</option>
                            }
                        </select>
                        <div class="field-validation-error"></div>
                    </td>
                </tr>   
                <tr>
                    <td><label>Supplier</label></td>
                    <td>
                        <select name="SupplierId" asp-for="@Model.SupplierId">
                            <option th:value="null">No Specific Category</option>
                            @foreach(var supplier in Model.Suppliers)
                            {
                                <option value="@supplier.Id">@supplier.SupplierName</option>
                            }
                        </select>
                        <div class="field-validation-error"></div>
                    </td>
                </tr>     
                <tr>
                    <td><label asp-for="@Model.Price">Price*</label></td>
                    <td>
                        <input type="text" asp-for="@Model.Price" class="moneyConversion">
                        <div class="field-validation-error"></div>
                    </td>
                </tr>              
                <tr>
                    <td><label asp-for="@Model.Stock">Stock*</label></td>
                    <td>
                        <input type="number" min="0" th:field="*{stock}" asp-for="@Model.Stock">
                        <div class="field-validation-error" th:errors="*{stock}"></div>
                    </td>
                </tr>
                <tr>
                    <td><label asp-for="@Model.OnOrder">On Order*</label></td>
                    <td>
                        <input type="number" min="0" asp-for="@Model.OnOrder">
                        <div class="field-validation-error"></div>
                    </td>
                </tr>
                <tr>
                    <td class="textarea-label"><label asp-for="@Model.Description">Product Description</label></td>
                    <td>
                        <textarea asp-for="@Model.Description"></textarea>
                        <div class="field-validation-error"></div>
                    </td>
                </tr>
            </tbody>
        </table>
        <button class="blue-button" type="submit">if(Insert or Update) Product</button>
    </form>
</main>
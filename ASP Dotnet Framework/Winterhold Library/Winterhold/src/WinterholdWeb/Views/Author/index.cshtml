@model Author.IndexAuthorVM
<div class="searchby">
    <label>Search by</label>
    <form method="get" asp-action="Index">
        <span>Name</span>
        <input type="text" asp-for="@Model.Name" >
        <button type="submit">Search</button>
    </form>
        <a asp-action="Insert">
            <button class="add-author button-25" id="insert-new">Add New Author</button>
        </a>
</div>
<table class="tablecontent">
    <thead>
        <th>Action</th>
        <th>Full Name</th>
        <th>Age</th>
        <th>Status</th>
        <th>Education</th>
        <th>Total Book Borrowed</th>
    </thead>
    <tbody>
        @{
            foreach(var author in Model.Authors)
            {
                <tr>
                    <td class="button-action">
                        <a asp-action="Books" asp-route-id="@author.Id"><button class="button-25">Books</button></a>
                        <a asp-action="Update" asp-route-id="@author.Id"><button class="button-25">Edit</button></a>
                        <a asp-action="Delete" asp-route-id="@author.Id"><button class="button-25">Delete</button></a>
                    </td>
                    <td>@author.FirstName @author.LastName</td>
                    <td>@author.Age</td>
                    <td>@author.AliveStatus</td>
                    <td>@author.Education</td>
                    <td>@author.TotalBookBorrowed</td>
                </tr>
            }
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="6">
                <div class="tfoot-flex">
                    <div>
                        Page @Model.Pagination.PageNumber of @Model.Pagination.TotalPages
                    </div>
                    <div>
                        @for(int pageNumber = 1; pageNumber <= Model.Pagination.TotalPages; pageNumber++)
                        {
                            <a asp-action="Index" asp-action="Index" asp-route-pageNumber="@pageNumber" asp-route-name="@Model.Name"><button class="button-25">@pageNumber</button></a>
                        }
                    </div>
                </div>
            </td>
        </tr>
    </tfoot>
</table>

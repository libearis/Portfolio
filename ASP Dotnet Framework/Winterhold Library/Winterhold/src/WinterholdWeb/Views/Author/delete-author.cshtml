@model Author.UpdateAuthorVM
<form method="post" asp-action="DeleteConfirm" asp-route-id="@Model.Id">
    <h1>Delete this Author?</h1>
    <input type="hidden"/>
    <input type="hidden"/>
    <table>
        <tbody>
            <tr>
                <td><label>Title</label></td>
                <td>
                    <label>@Model.Title</label>
                    <div class="field-validation-error"></div>
                </td>
            </tr>
            <tr>
                <td><label>First Name</label></td>
                <td>
                    <label>@Model.FirstName</label>
                    <div class="field-validation-error"></div>
                </td>
            </tr>
            <tr>
                <td><label>Last Name</label></td>
                <td>
                    <label>@Model.LastName</label>
                    <div class="field-validation-error"></div>
                </td>
            </tr>
            <tr>
                <td><label>Birth Date</label></td>
                <td>
                    <label>@Model.BirthDate.ToString("dd MMMM yyyy")</label>
                    <div class="field-validation-error"></div> 
                </td>
            </tr>
            <tr>
                <td><label>Decease Date</label></td>
                <td>
                    <label>@Model.DeceasedDate?.ToString("dd MMMM yyyy")</label>
                    <div class="field-validation-error"></div>
                </td>
            </tr>
            <tr>
                <td><label>Education</label></td>
                <td>
                    <label>@Model.Education</label>
                    <div class="field-validation-error"></div>
                </td>
            </tr>
            <tr>
                <td class="textarea-label"><label>Summary</label></td>
                <td>
                    <label>@Model.Summary</label>
                    <div class="field-validation-error"></div>
                </td>
            </tr>
        </tbody>
    </table>
    <button class="button-25" type="submit">Delete Author</button>
    <button class="button-25"><a asp-action="Index">Back to Index</a></button>
</form>